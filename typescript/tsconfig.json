{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "declaration": false,
      "outDir": "./dist"
    },
    "include": ["2025/**/*.ts"],
    "exclude": ["node_modules"]
  }